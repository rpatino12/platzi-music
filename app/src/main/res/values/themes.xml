<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlatziMusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_text</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/primary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlatziMusic.Red" parent="Theme.PlatziMusic">
        <item name="android:textColorHint">#FF0000</item>
        <item name="android:background">#FC9595</item>
    </style>

    <style name="Theme.PlatziMusic.Green" parent="Theme.PlatziMusic">
        <item name="android:textColorHint">#00FF00</item>
        <item name="android:background">#95FC95</item>
    </style>

</resources>